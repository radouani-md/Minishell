{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build minishell",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                // "-g",
                // "${workspaceFolder}/*.c",
                "execution/*.c",
                "parsing/*.c",
                "-lreadline",
                "-o",
                "${workspaceFolder}/minishell"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated for Minishell debugging."
        }
    ],
    "version": "2.0.0"
}